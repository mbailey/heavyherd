			<%= link_to "", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?", :class => 'login' %>
		<% end %>
		<h2>who we're listening to. when they're touring.</h2>



  		<div id="header_nav">
  			<div id="nav_wrap">
  			<span><%= link_to_unless_current 'Gigs', gigs_url %></span>
  			<span class="nav_spacer">/</span>
  			<span><%= link_to_unless_current 'Artists', artists_url %></span>
  			</div>
  		</div>

  	</div>
  	
  	
